# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_different_from_app_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=postgresql://timly:timly_password@postgres:5432/timly_dev

