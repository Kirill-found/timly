# Timly Environment Variables
# Скопируйте в .env и заполните своими значениями

# ==============================================
# ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
# ==============================================

# OpenAI API Key (обязательно для работы AI анализа)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Настройки безопасности (обязательно для production!)
SECRET_KEY=generate-random-32-char-secret-key-here
ENCRYPTION_KEY=generate-fernet-encryption-key-here
JWT_SECRET_KEY=generate-jwt-secret-key-here

# База данных (Render предоставит PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# ==============================================
# НАСТРОЙКИ ОКРУЖЕНИЯ
# ==============================================

# Окружение: development, staging, production
APP_ENV=production

# Отладка (отключите в продакшене!)
DEBUG=false

# CORS Origins (добавьте ваш домен)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# ОПЦИОНАЛЬНЫЕ НАСТРОЙКИ
# ==============================================

# Redis (если используете фоновые задачи)
# REDIS_URL=redis://default:password@host:port

# Мониторинг (опционально)
# SENTRY_DSN=https://your-sentry-dsn

# OAuth настройки (если нужны)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# Лимиты подписок (по умолчанию)
# FREE_TIER_VACANCIES=2
# FREE_TIER_ANALYSES=10
# FREE_TIER_EXPORTS=5